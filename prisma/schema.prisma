// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  alumni    Alumnus[]
}

model Alumnus {
  id           String   @id @default(cuid())
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Common fields (indexed for performance)
  name         String?
  batch        String?
  organization String?
  designation  String?
  location     String?
  email        String?
  
  // All other fields as JSON
  data         String?   // JSON string representing additional attributes
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([projectId])
  @@index([batch])
  @@index([organization])
}
